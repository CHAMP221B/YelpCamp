<% include ../partials/header %>





<header class="jumbotron">
  <div class="container">

    <h1>Welcome to YelpCamp</h1>
    <p>View our hand-picked camping sites from all over the world</p>
    <p>
      <a class="btn btn-primary btn-lg" href="campgrounds/new">Add new Campground</a>

    </p>
  </div>
</header>

<div class="row" >
  <div class="col-lg-12">
    <h3>Our Most Popular Campground Sites</h3>

  </div>
</div>

<div class="row " style="display:flex; flex-wrap:wrap;">
  <% campgrounds.forEach(function(campground){ %>
  <div class="col-md-4 col-sm-6">
    <div class="thumbnail">

        <img src="<%= campground.image %>" style="max-width:100%; max-height:100%;" >
        <div class="caption">
          <h4 style="text-align:center"><%= campground.name %> </h4>
        </div>
        <p>
          <a style="display:flex; justify-content:center" href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
        </p>

    </div>
  </div>








     <% }); %>
</div>




<% include ../partials/footer %>
